<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@color/white"
    tools:context=".MainActivity">

    <!-- Name and ID Display -->
    <TextView
        android:id="@+id/textViewNameId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Saima Ahmadi\nID: 12345"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/buttonExplicit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        android:layout_marginTop="16dp"/>

    <!-- Start Activity Explicitly Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonExplicit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Start Activity Explicitly"
        android:textSize="18sp"
        android:textColor="@color/white"
        app:backgroundTint="@color/purple_500"
        android:paddingVertical="16dp"
        app:icon="@drawable/home_24px"
        app:iconPadding="8dp"
        app:cornerRadius="35dp"
        app:elevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/textViewNameId"
        app:layout_constraintBottom_toTopOf="@id/buttonImplicit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"/>

    <!-- Start Activity Implicitly Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonImplicit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Start Activity Implicitly"
        android:textSize="18sp"
        android:textColor="@color/white"
        app:backgroundTint="@color/purple_500"
        android:paddingVertical="16dp"
        app:icon="@drawable/globe_24px"
        app:iconPadding="8dp"
        app:cornerRadius="35dp"
        app:elevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/buttonExplicit"
        app:layout_constraintBottom_toTopOf="@id/buttonViewImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"/>

    <!-- View Image Activity Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonViewImage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="View Image Activity"
        android:textSize="18sp"
        android:textColor="@color/white"
        app:backgroundTint="@color/purple_500"
        android:paddingVertical="16dp"
        app:icon="@drawable/image_24px"
        app:iconPadding="8dp"
        app:cornerRadius="35dp"
        app:elevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/buttonImplicit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>